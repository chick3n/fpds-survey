    "version": "0.2.0",
    "configurations": [
        {
            "name": "backend",
            "type": "python",
            "request": "launch",
            "program": "server.py",
            "cwd": "${workspaceFolder}/survey/backend",
            "console": "integratedTerminal",
        },
        {
            "command": "npm start",
            "name": "frontend",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/survey/frontend",
        }
    ],
    "compounds": [
        {
            "name": "front/backend",
            "configurations": ["backend", "frontend"],
            "stopAll": true
        }
    ]
}